{
  "name": "kafka-testdata-spark",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "dev",
  "workspaceFolder": "/workspaces/kafka-testdata-spark",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": { "moby": false }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "jupyter.jupyterServerType": "local"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "humao.rest-client"
      ]
    }
  },
  "forwardPorts": [9092, 8081, 8083, 9021],
  "postCreateCommand": "pip install -r requirements.txt || true"
}